print('\n\t\t ---- Calculadora de Bhaskara ---- \n')

a, b, c = input("Digite os coeficientes a, b e c separados por espaço: ").split()
a = float(a)
b = float(b)
c = float(c)

delta = (b**2) - 4 * a * c

if a == 0 or delta < 0:
    print("impossível calcular")
else:
    raiz1 = (-b + delta ** 0.5) / (2 * a)
    raiz2 = (-b - delta ** 0.5) / (2 * a)
    print(f'Raiz 1: {raiz1:.5f}, Raiz 2: {raiz2:.5f}')
